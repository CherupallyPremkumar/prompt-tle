<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.handmade.tle</groupId>
    <artifactId>prompt-parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <groupId>com.handmade.tle</groupId>
  <artifactId>prompt-service</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Prompt Domain Service</name>
  <description>Core Business Logic for Prompts and STMs</description>
  <licenses>
    <license>
      <name>MIT License</name>
      <url>http://www.opensource.org/licenses/mit-license.php</url>
    </license>
  </licenses>
  <dependencies>
    <dependency>
      <groupId>com.handmade.tle</groupId>
      <artifactId>shared-library</artifactId>
      <version>${revision}</version>
    </dependency>
    <dependency>
      <groupId>org.chenile</groupId>
      <artifactId>workflow-service</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>
    <dependency>
      <groupId>org.chenile</groupId>
      <artifactId>chenile-http</artifactId>
    </dependency>
    <dependency>
      <groupId>org.chenile</groupId>
      <artifactId>chenile-security-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.chenile</groupId>
      <artifactId>chenile-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.chenile</groupId>
      <artifactId>cucumber-utils</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.cucumber</groupId>
      <artifactId>cucumber-spring</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.cucumber</groupId>
      <artifactId>cucumber-junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.chenile</groupId>
        <artifactId>stm-generate-puml</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>generate-puml</goal>
            </goals>
            <configuration>
              <stylingPropertiesFile>com.handmade.tle/styling.json</stylingPropertiesFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
