<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

    <resultMap id="userResult" type="map">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="fullName" column="full_name"/>
        <result property="email" column="email"/>
        <result property="pictureUrl" column="picture_url"/>
        <result property="bio" column="bio"/>
        <result property="createdTime" column="created_time"/>
        <association property="reputation" javaType="map">
            <result property="totalReputation" column="total_reputation"/>
        </association>
    </resultMap>

    <select id="searchUsers-count" resultType="int">
        SELECT COUNT(*)
        FROM users u
        <where>
            <if test="username != null">
                AND u.username LIKE #{username}
            </if>
            <if test="fullName != null">
                AND u.full_name LIKE #{fullName}
            </if>
            <if test="tenant != null">
                AND u.tenant = #{tenant}
            </if>
        </where>
    </select>

    <select id="searchUsers" resultMap="userResult">
        SELECT u.*, r.total_reputation
        FROM users u
        LEFT JOIN user_reputation r ON u.id = r.user_id
        <where>
            <if test="username != null">
                AND u.username LIKE #{username}
            </if>
            <if test="fullName != null">
                AND u.full_name LIKE #{fullName}
            </if>
            <if test="tenant != null">
                AND u.tenant = #{tenant}
            </if>
        </where>
        <choose>
            <when test="orderby != null and orderby.contains('order by 0')">
                ORDER BY r.total_reputation DESC, u.created_time DESC
            </when>
            <otherwise>
                ${orderby}
            </otherwise>
        </choose>
        ${pagination}
    </select>

</mapper>
